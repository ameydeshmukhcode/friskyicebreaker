<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.frisky.icebreaker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/FriskyAppTheme">
        <activity android:name=".orders.OrderActivity"></activity>
        <activity android:name=".orders.MenuActivity" />
        <activity android:name=".profile.SetupProfileActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity
            android:name=".HomeActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".pubs.PubActivity" />
        <activity android:name=".profile.ProfileActivity" />
        <activity
            android:name=".profile.EditProfileActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".profile.ViewUserActivity" />
        <activity android:name=".social.ChatActivity" />
    </application>

</manifest>