<resources>
    <!-- Base application theme. -->
    <style name="FriskyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="FriskyText" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/museosans700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="FriskyToolbarText" parent="FriskyText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FriskyAppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FriskyCircleButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">@dimen/button_square_dimen</item>
        <item name="iconTint">@android:color/black</item>
        <item name="rippleColor">@color/tintDark</item>
        <item name="cornerRadius">25dp</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>
</resources>
