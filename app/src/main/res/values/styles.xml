<resources>
    <!-- Base application theme. -->
    <style name="FriskyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="NoLetterSpacing" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="FriskyPopUpOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FriskyAppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    
    <style name="FriskyTabTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/museosans700</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FriskyTabAppearance" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/bg_round_rect</item>
        <item name="tabIndicatorColor">@color/backgroundLight</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabMaxWidth">250dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabTextAppearance">@style/FriskyTabTextAppearance</item>
    </style>
</resources>
