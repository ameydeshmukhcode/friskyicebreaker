<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_diet_type"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_name" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/museosans700"
            android:text="@string/placeholder_text"
            android:textSize="@dimen/text_menu_item_title"
            app:layout_constraintStart_toEndOf="@+id/image_diet_type"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rupee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/museosans700"
            android:text="@string/rupee"
            android:textSize="@dimen/text_menu_item_price"
            app:layout_constraintStart_toStartOf="@+id/text_name"
            app:layout_constraintTop_toBottomOf="@+id/text_name" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/museosans700"
            android:text="@string/default_number"
            android:textSize="@dimen/text_menu_item_price"
            app:layout_constraintBottom_toBottomOf="@+id/rupee"
            app:layout_constraintStart_toEndOf="@+id/rupee"
            app:layout_constraintTop_toTopOf="@+id/rupee" />

        <TextView
            android:id="@+id/item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/museosans300"
            android:text="@string/item_total"
            android:textSize="@dimen/text_menu_item_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_name"
            app:layout_constraintTop_toBottomOf="@+id/rupee" />

        <TextView
            android:id="@+id/rupee_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/museosans700"
            android:text="@string/rupee"
            android:textColor="@color/appRed"
            android:textSize="@dimen/text_menu_item_description"
            app:layout_constraintBottom_toBottomOf="@+id/item_total"
            app:layout_constraintStart_toEndOf="@+id/item_total"
            app:layout_constraintTop_toTopOf="@+id/item_total" />

        <TextView
            android:id="@+id/text_cart_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/museosans700"
            android:text="@string/default_number"
            android:textColor="@color/appRed"
            android:textSize="@dimen/text_menu_item_description"
            app:layout_constraintBottom_toBottomOf="@+id/rupee_total"
            app:layout_constraintStart_toEndOf="@+id/rupee_total"
            app:layout_constraintTop_toTopOf="@+id/rupee_total"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_remove"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:backgroundTint="@color/appGreen"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_remove"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_add"
            app:layout_constraintEnd_toStartOf="@+id/text_item_count"
            app:layout_constraintStart_toStartOf="@+id/button_add_item"
            app:layout_constraintTop_toTopOf="@+id/button_add">

        </com.google.android.material.button.MaterialButton>

        <TextView
            android:id="@+id/text_item_count"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:fontFamily="@font/museosans700"
            android:gravity="center"
            android:text="@string/default_number"
            android:textSize="@dimen/text_title_size"
            app:layout_constraintBottom_toBottomOf="@+id/button_add"
            app:layout_constraintEnd_toStartOf="@+id/button_add"
            app:layout_constraintTop_toTopOf="@+id/button_add" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_add"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/appGreen"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_name">

        </com.google.android.material.button.MaterialButton>

        <ImageView
            android:id="@+id/image_in_cart"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/in_cart"
            app:layout_constraintEnd_toStartOf="@+id/in_cart"
            app:layout_constraintStart_toStartOf="@+id/button_remove"
            app:layout_constraintTop_toTopOf="@+id/in_cart"
            app:srcCompat="@drawable/ic_cart" />

        <TextView
            android:id="@+id/in_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/museosans300"
            android:text="@string/in_cart"
            android:textColor="@color/textDark"
            android:textSize="@dimen/text_menu_item_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button_add"
            app:layout_constraintStart_toEndOf="@+id/image_in_cart" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>