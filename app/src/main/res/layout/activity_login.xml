<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/ktfroadstar"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_circular"
        android:ems="10"
        android:fontFamily="@font/museosans300"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="25dp"
        android:paddingTop="12dp"
        android:paddingEnd="25dp"
        android:paddingBottom="12dp"
        android:textColor="@color/textDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_circular"
        android:ems="10"
        android:fontFamily="@font/museosans300"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="25dp"
        android:paddingTop="12dp"
        android:paddingEnd="25dp"
        android:paddingBottom="12dp"
        android:textColor="@color/textDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/input_email"
        app:layout_constraintStart_toStartOf="@+id/input_email"
        app:layout_constraintTop_toBottomOf="@+id/input_email" />

    <TextView
        android:id="@+id/link_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/museosans300"
        android:text="@string/password_forgot"
        android:textColor="@color/textDark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/input_password"
        app:layout_constraintTop_toBottomOf="@+id/input_password" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/ktfroadstar"
        android:text="@string/login"
        android:textColor="@color/textLight"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/input_password"
        app:layout_constraintStart_toStartOf="@+id/input_password"
        app:layout_constraintTop_toBottomOf="@+id/input_password" />

    <View
        android:id="@+id/divider_left"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/darkAccent"
        app:layout_constraintBottom_toBottomOf="@+id/or_log_in_with"
        app:layout_constraintEnd_toStartOf="@+id/or_log_in_with"
        app:layout_constraintStart_toStartOf="@+id/button_login"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <TextView
        android:id="@+id/or_log_in_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/museosans300"
        android:text="@string/alternate_login"
        android:textColor="@color/textDark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <View
        android:id="@+id/divider_right"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/darkAccent"
        app:layout_constraintBottom_toBottomOf="@+id/or_log_in_with"
        app:layout_constraintEnd_toEndOf="@+id/button_login"
        app:layout_constraintStart_toEndOf="@+id/or_log_in_with"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <ImageButton
        android:id="@+id/button_google"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="@color/tintLight"
        android:contentDescription="@string/facebook"
        android:elevation="2dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_google"
        app:layout_constraintEnd_toStartOf="@+id/button_facebook"
        app:layout_constraintStart_toStartOf="@+id/divider_left"
        app:layout_constraintTop_toBottomOf="@+id/or_log_in_with" />

    <ImageButton
        android:id="@+id/button_facebook"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="@color/colorFacebook"

        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_facebook"
        app:layout_constraintEnd_toEndOf="@+id/divider_right"
        app:layout_constraintStart_toEndOf="@+id/button_google"
        app:layout_constraintTop_toBottomOf="@+id/or_log_in_with" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_signup"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="@color/backgroundDark"
        android:contentDescription="@string/facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/no_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/no_account"
                android:textAlignment="textEnd"
                android:textColor="@color/textLight"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/link_sign_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/link_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/sign_up"
                android:textColor="@color/textLight"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/no_account"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>