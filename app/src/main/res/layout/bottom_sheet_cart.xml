<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tintLight"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/order_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/museosans300"
        android:text="@string/cart_active"
        android:textColor="@color/textDark"
        android:textSize="@dimen/text_subtitle_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/your_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/museosans300"
        android:text="@string/your_total"
        android:textSize="@dimen/text_subtitle_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_active" />

    <TextView
        android:id="@+id/rupee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/museosans700"
        android:text="@string/rupee"
        android:textColor="@color/appRed"
        android:textSize="@dimen/text_subtitle_size"
        app:layout_constraintBottom_toBottomOf="@+id/your_total"
        app:layout_constraintStart_toEndOf="@+id/your_total"
        app:layout_constraintTop_toTopOf="@+id/your_total" />

    <TextView
        android:id="@+id/text_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/museosans700"
        android:text="@string/default_number"
        android:textColor="@color/appRed"
        app:layout_constraintBottom_toBottomOf="@+id/your_total"
        app:layout_constraintStart_toEndOf="@+id/rupee"
        app:layout_constraintTop_toTopOf="@+id/your_total" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_order"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:text="@string/view_cart"
        android:textSize="@dimen/text_subtitle_size"
        android:clickable="false"
        android:focusable="false"
        style="@style/ButtonOutlined"
        app:layout_constraintBottom_toBottomOf="@+id/your_total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_active" />

</androidx.constraintlayout.widget.ConstraintLayout>