<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".social.ChatActivity">

    <include
        android:id="@+id/app_bar_chat"
        layout="@layout/app_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_message"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_chat"
        android:ems="10"
        android:fontFamily="@font/museosans300"
        android:hint="@string/type_mess"
        android:inputType="text"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:paddingEnd="60dp"
        android:paddingBottom="10dp"
        android:textColor="@color/textDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button_send"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="@color/colorPrimary"
        android:contentDescription="@string/send_message"
        android:elevation="2dp"
        android:tint="@color/tintLight"
        app:layout_constraintBottom_toBottomOf="@+id/input_message"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/input_message"
        app:layout_constraintTop_toTopOf="@+id/input_message"
        app:srcCompat="@drawable/round_send_24" />
</android.support.constraint.ConstraintLayout>