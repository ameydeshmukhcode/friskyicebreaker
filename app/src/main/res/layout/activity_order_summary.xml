<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orders.OrderSummaryActivity">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="@dimen/button_square_dimen"
        android:layout_height="@dimen/button_square_dimen"
        android:background="@color/transparent"
        android:tint="@color/tintDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/order_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/museosans300"
        android:text="@string/order_summary"
        android:textColor="@color/textDark"
        android:textSize="@dimen/app_bar_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/museosans700"
        android:text="@string/placeholder_text"
        android:textAllCaps="true"
        android:textSize="@dimen/app_bar_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/text_table"
        app:layout_constraintEnd_toStartOf="@+id/text_table"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_table" />

    <TextView
        android:id="@+id/text_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_rect"
        android:fontFamily="@font/museosans700"
        android:gravity="center"
        android:padding="@dimen/bg_round_rect_radius"
        android:text="@string/placeholder_text"
        android:textAllCaps="true"
        android:textColor="@color/textDark"
        android:textSize="@dimen/app_bar_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_restaurant"
        app:layout_constraintTop_toBottomOf="@+id/button_back" />

    <TextView
        android:id="@+id/text_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/museosans300"
        android:text="@string/placeholder_text"
        android:textSize="@dimen/text_subtitle_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_table" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@color/lightAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_date_time" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_final_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:background="@color/lightAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_final_order" />

            <TextView
                android:id="@+id/vat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/vat"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />

            <TextView
                android:id="@+id/rupee_vat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/rupee"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintBottom_toBottomOf="@+id/text_vat"
                app:layout_constraintEnd_toStartOf="@+id/text_vat"
                app:layout_constraintTop_toTopOf="@+id/text_vat" />

            <TextView
                android:id="@+id/text_vat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/default_number"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintBottom_toBottomOf="@+id/vat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/vat" />

            <TextView
                android:id="@+id/cgst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/cgst"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintStart_toStartOf="@+id/vat"
                app:layout_constraintTop_toBottomOf="@+id/vat" />

            <TextView
                android:id="@+id/rupee_cgst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/rupee"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintBottom_toBottomOf="@+id/text_cgst"
                app:layout_constraintEnd_toStartOf="@+id/text_cgst"
                app:layout_constraintTop_toTopOf="@+id/text_cgst" />

            <TextView
                android:id="@+id/text_cgst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/default_number"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintEnd_toEndOf="@+id/text_vat"
                app:layout_constraintTop_toBottomOf="@+id/text_vat" />

            <TextView
                android:id="@+id/sgst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/sgst"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintStart_toStartOf="@+id/cgst"
                app:layout_constraintTop_toBottomOf="@+id/cgst" />

            <TextView
                android:id="@+id/rupee_sgst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/rupee"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintBottom_toBottomOf="@+id/text_sgst"
                app:layout_constraintEnd_toStartOf="@+id/text_sgst"
                app:layout_constraintTop_toTopOf="@+id/text_sgst" />

            <TextView
                android:id="@+id/text_sgst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/default_number"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintEnd_toEndOf="@+id/text_cgst"
                app:layout_constraintTop_toBottomOf="@+id/text_cgst" />

            <TextView
                android:id="@+id/total_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/total_tax"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintStart_toStartOf="@+id/sgst"
                app:layout_constraintTop_toBottomOf="@+id/sgst" />

            <TextView
                android:id="@+id/rupee_total_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/rupee"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintBottom_toBottomOf="@+id/text_total_tax"
                app:layout_constraintEnd_toStartOf="@+id/text_total_tax"
                app:layout_constraintTop_toTopOf="@+id/text_total_tax" />

            <TextView
                android:id="@+id/text_total_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/museosans300"
                android:text="@string/default_number"
                android:textSize="@dimen/text_subtitle_size"
                app:layout_constraintEnd_toEndOf="@+id/text_sgst"
                app:layout_constraintTop_toBottomOf="@+id/text_sgst" />

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/lightAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_tax" />

            <TextView
                android:id="@+id/your_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/museosans700"
                android:text="@string/your_total"
                android:textSize="@dimen/text_title_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

            <TextView
                android:id="@+id/rupee_final_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/museosans700"
                android:text="@string/rupee"
                android:textSize="@dimen/text_title_size"
                app:layout_constraintBottom_toBottomOf="@+id/text_final_total"
                app:layout_constraintEnd_toStartOf="@+id/text_final_total"
                app:layout_constraintTop_toTopOf="@+id/text_final_total" />

            <TextView
                android:id="@+id/text_final_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/museosans700"
                android:text="@string/default_number"
                android:textSize="@dimen/text_title_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>