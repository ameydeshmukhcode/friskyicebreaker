<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_top_corners_rounded"
    android:elevation="10dp">

    <TextView
        android:id="@+id/session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/museosans300"
        android:text="@string/current_session"
        android:textSize="@dimen/text_subtitle_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/museosans300"
        android:text="@string/placeholder"
        android:textSize="@dimen/text_subtitle_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/session" />

    <TextView
        android:id="@+id/text_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/museosans300"
        android:text="@string/placeholder"
        android:textSize="@dimen/text_subtitle_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_restaurant"
        app:layout_constraintTop_toBottomOf="@+id/session"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_view_menu"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent"
        android:fontFamily="@font/museosans700"
        android:foreground="?attr/selectableItemBackground"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/view_menu"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_title_size"
        app:layout_constraintBottom_toBottomOf="@+id/text_restaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/session" />

</androidx.constraintlayout.widget.ConstraintLayout>