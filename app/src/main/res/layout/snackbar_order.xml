<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tintLight">

    <Button
        android:id="@+id/button_view_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent"
        android:fontFamily="@font/museosans900"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/view"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_order_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/museosans300"
        android:text="@string/order_active"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/museosans300"
        android:text="@string/your_total"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_order_active" />

    <TextView
        android:id="@+id/text_rupee"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/museosans700"
        android:text="@string/rupee"
        android:textColor="@color/appRed"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_total"
        app:layout_constraintStart_toEndOf="@+id/text_total"
        app:layout_constraintTop_toTopOf="@+id/text_total" />

    <TextView
        android:id="@+id/text_order_total"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/museosans700"
        android:text="@string/placeholder_number"
        android:textColor="@color/appRed"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_total"
        app:layout_constraintStart_toEndOf="@+id/text_rupee"
        app:layout_constraintTop_toTopOf="@+id/text_total" />
</android.support.constraint.ConstraintLayout>